
<% include partials/head %>
<input type="hidden" value="<%=user.dateChoisi%>" id="date_choisi" />
<div class="container border border-info" style="width:20%">

<div id="compteur">
  <span class="text-warning">prochain random</span>
<span>
    <span id="heure" class="compteur"></span> :
    <span id="minute" class="compteur"></span> :
    <span id="seconde" class="compteur"></span>
</span>
</div>
  <div class="card" style="width: 18rem;">
    <div class="card-header  bg-light text-center">Profil</div>

    <div class="card-body">
      <h5 class="card-title">Infos</h5>
      <img src="../upload/<%=user.photo%>" class="card-img-top" alt="avatar" id="photo"> <br>

      Nom : <%= user.nom%> <br>
      Prenom <%=user.prenom%> <br>
      date de naisance <%=moment(user.dateNaissance).format('D MMMM YYYY')%> <br>
      Ville : <%=user.ville %> <br>
      Domaine :  <%=user.domaine %> <br>


    </div>
  </div>


</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<script>
$( document ).ready(function() {

  function clock(){
var date=new Date($("#date_choisi").val()).getTime();

var demain=date+(60*60*24*1000);
today=new Date().getTime();

var dif=new Date(demain-today);

time=dif.getUTCHours()+":"+dif.getUTCMinutes()+":"+dif.getUTCSeconds();
$("#heure").html(dif.getUTCHours());
$("#minute").html(dif.getUTCMinutes());
$("#seconde").html(dif.getUTCSeconds());


  }
//clock();
  var temps=setInterval(clock,1000);
});
</script>

