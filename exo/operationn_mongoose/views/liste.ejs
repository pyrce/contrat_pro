<div class="page">
        <div class="container">


                <div class="jumbotron text-center bg-secondary" style="font-size:40px">Calculatrice</div>
                <table class="table table-sm table-strip">
                        <thead class="thead-light text-center">
                                <th>nombre1</th>
                                <th>nombre2</th>
                                <th>operation</th>
                                <th>resultat</th>
                                <th>Action</th>
                        </thead>
                        <tbody>


                                <% for(var i=0;i<liste.length;i++){ %>
                                <tr class="text-center">
                                        <td><%= liste[i].nombre1 %></td>
                                        <td><%= liste[i].nombre2 %></td>
                                        <td><%= liste[i].type[0].libelle %></td>
                                        <td><%= liste[i].resultat %></td>
                                        <td>
                                                <%if(liste[i].actif){%> <a href="/calcul/<%=liste[i]._id%>"
                                                        class="btn btn-primary btn-sm"><i
                                                                class="fas fa-calculator"></i></a><%}%>
                <a href="/edit/<%=liste[i]._id%>" class="btn btn-info btn-sm"><i class="fas fa-pen"></i></a>
                                                <a href="/desactiver/<%=liste[i]._id%>"
                                                        class="btn btn-warning btn-sm"><i class="fas fa-ban"></i></a>
                                        </td>
                                </tr>

                                <% } %>

                        </tbody>


                </table>
                <a href="/ajout" class="btn btn-primary float-right">Ajouter</a>
          
        </div>
</div>
